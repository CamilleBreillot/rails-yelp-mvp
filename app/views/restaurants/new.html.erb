<h1>Yelp</h1>

<h2>Add a new restaurant</h2>

<%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category %>
    <%= f.input :phone_number %>
    <%= f.submit class:"btn btn-danger" %>
  <% end %>

  <%= link_to "Back", restaurants_path, class: "btn btn-danger" %>
